#!/SBUILD
_disabled: false

pkg: "theweb"
pkg_id: "github.com.vicr123.theweb"
pkg_type: "appimage"
app_id: "github.com.vicr123.theweb"
build_util:
  - "curl#bin"
  - "jq#bin"
category:
  - "Utility"
description: "Web Browser"
distro_pkg:
  archlinux:
    aur:
      - "theweb"
homepage:
  - "https://github.com/vicr123/theweb"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "GPL3"
src_url:
  - "https://github.com/vicr123/theweb"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/vicr123/theweb/releases/latest?per_page=100" | jq -r '.. | objects | .browser_download_url? // empty' | sed -E 's/(x86_64|aarch64)//' | tr -d '[:alpha:]' | sed 's/^[^0-9]*//; s/[^0-9]*$//' | sort --version-sort | tail -n 1 | tr -d '[:space:]'
  run: |
    #Tag
    RELEASE_TAG="$(cat ./${PKG}.version)"
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/vicr123/theweb@${RELEASE_TAG}" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
