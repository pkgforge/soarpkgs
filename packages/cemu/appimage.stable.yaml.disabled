#!/SBUILD
_disabled: false

pkg: "cemu"
pkg_id: "github.com.cemu-project.Cemu"
pkg_type: "appimage"
app_id: "github.com.cemu-project.Cemu"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Cemu - Wii U emulator"
homepage:
  - "https://github.com/cemu-project/Cemu"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "Mozilla Public License 2.0"
src_url:
  - "https://github.com/cemu-project/Cemu"
tag:
  - "cemu"
  - "cemu-emulator"
  - "cpp"
  - "emulation"
  - "emulator"
  - "nintendo"
  - "wiiu"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/cemu-project/Cemu/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '"'\''[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/cemu-project/Cemu" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
