#!/SBUILD
_disabled: false

pkg: "prisma-studio"
pkg_id: "github.com.prisma.studio"
pkg_type: "appimage"
app_id: "github.com.prisma.studio"
build_util:
  - "curl#bin"
  - "jq#bin"
category:
  - "Utility"
description: "üéôÔ∏è The easiest way to explore and manipulate your data in all of your Prisma projects."
distro_pkg:
  archlinux:
    aur:
      - "prisma-studio-appimage"
homepage:
  - "https://www.prisma.io/studio"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "Apache"
src_url:
  - "https://github.com/prisma/studio"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/prisma/studio/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[‚úó] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/prisma/studio" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
