#!/SBUILD
_disabled: false

pkg: "customrpc"
pkg_id: "github.com.KurozeroPB.CustomRPC"
pkg_type: "appimage"
app_id: "github.com.KurozeroPB.CustomRPC"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Set a custom rich presence status on Discord"
homepage:
  - "https://github.com/KurozeroPB/CustomRPC"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "GNU General Public License v3.0"
src_url:
  - "https://github.com/KurozeroPB/CustomRPC"
tag:
  - "custom"
  - "discord"
  - "discord-api"
  - "discord-rpc"
  - "presence"
  - "rich-presence"
  - "status"
  - "tool"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/KurozeroPB/CustomRPC/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/KurozeroPB/CustomRPC" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
