#!/SBUILD
_disabled: false

pkg: "botclient"
pkg_id: "github.com.DarkGuy10.BotClient"
pkg_type: "appimage"
app_id: "github.com.DarkGuy10.BotClient"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "A discord botclient built with Electron, React and discord.js."
distro_pkg:
  archlinux:
    aur:
      - "botclient-bin"
homepage:
  - "https://github.com/DarkGuy10/BotClient"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT"
src_url:
  - "https://github.com/DarkGuy10/BotClient"
tag:
  - "bot"
  - "botclient"
  - "discord"
  - "discord-api"
  - "discord-bot-client"
  - "discord-js"
  - "electron"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/DarkGuy10/BotClient/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/DarkGuy10/BotClient" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
