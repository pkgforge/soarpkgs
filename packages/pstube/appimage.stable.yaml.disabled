#!/SBUILD
_disabled: false

pkg: "pstube"
pkg_id: "github.com.prateekmedia.pstube"
pkg_type: "appimage"
app_id: "github.com.prateekmedia.pstube"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Watch and download videos without ads"
homepage:
  - "https://github.com/prateekmedia/pstube"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "GNU General Public License v3.0"
src_url:
  - "https://github.com/prateekmedia/pstube"
tag:
  - "downloader"
  - "flutter"
  - "flutter-desktop"
  - "free"
  - "gplv3"
  - "open"
  - "video"
  - "youtube"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/prateekmedia/pstube/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '"'\''[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/prateekmedia/pstube" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
