#!/SBUILD
_disabled: false

pkg: "exportoo"
pkg_id: "github.com.NiklasMerz.exportoo"
pkg_type: "appimage"
app_id: "github.com.NiklasMerz.exportoo"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Look at your Brainyoo exports Desktop and Webapp"
homepage:
  - "https://github.com/NiklasMerz/exportoo"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/NiklasMerz/exportoo"
tag:
  - "braniyoo"
  - "desktop"
  - "exports"
  - "webapp"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/NiklasMerz/exportoo/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/NiklasMerz/exportoo" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
