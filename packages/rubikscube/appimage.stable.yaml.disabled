#!/SBUILD
_disabled: false

pkg: "rubikscube"
pkg_id: "github.com.theoden8.rubikscube"
pkg_type: "appimage"
app_id: "github.com.theoden8.rubikscube"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Rubiks cube in OpenGL."
homepage:
  - "https://github.com/theoden8/rubikscube"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/theoden8/rubikscube"
tag:
  - "cpp"
  - "cpp17"
  - "glfw"
  - "group-theory"
  - "opengl"
  - "rubiks-cube"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/theoden8/rubikscube/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == true)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '"'\''[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/theoden8/rubikscube" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
