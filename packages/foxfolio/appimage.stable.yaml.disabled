#!/SBUILD
_disabled: false

pkg: "foxfolio"
pkg_id: "github.com.foxfolio.foxfolio-desktop"
pkg_type: "appimage"
app_id: "github.com.foxfolio.foxfolio-desktop"
build_util:
  - "curl#bin"
  - "jq#bin"
category:
  - "Utility"
description: "Cryptocurrency portfolio management application which automatically retrieves balances and trades using exchange APIs"
homepage:
  - "https://github.com/foxfolio/foxfolio-desktop"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/foxfolio/foxfolio-desktop"
tag:
  - "altcoin"
  - "bitcoin"
  - "cryptocurrencies"
  - "cryptocurrency"
  - "cryptocurrency-exchanges"
  - "ethereum"
  - "litecoin"
  - "portfolio"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/foxfolio/foxfolio-desktop/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/foxfolio/foxfolio-desktop" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
