#!/SBUILD
_disabled: false

pkg: "gridplayer"
pkg_id: "github.com.vzhd1701.gridplayer"
pkg_type: "appimage"
app_id: "github.com.vzhd1701.gridplayer"
build_util:
  - "curl#bin"
  - "jq#bin"
category:
  - "Utility"
description: "Play videos side-by-side"
distro_pkg:
  archlinux:
    aur:
      - "gridplayer-appimage"
homepage:
  - "https://github.com/vzhd1701/gridplayer"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "GPL-3.0-only"
  - "GPL-3.0-or-later"
src_url:
  - "https://github.com/vzhd1701/gridplayer"
tag:
  - "libvlc"
  - "livestream"
  - "player"
  - "player-video"
  - "pyqt"
  - "pyqt5"
  - "python"
  - "qt"
  - "qt5"
  - "streaming"
  - "streamlink"
  - "twitch"
  - "video"
  - "video-player"
  - "vlc"
  - "youtube"
  - "youtube-dl"
  - "yt-dlp"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/vzhd1701/gridplayer/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/vzhd1701/gridplayer" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
