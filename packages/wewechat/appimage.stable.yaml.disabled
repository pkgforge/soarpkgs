#!/SBUILD
_disabled: false

pkg: "wewechat"
pkg_id: "github.com.trazyn.wewechat"
pkg_type: "appimage"
app_id: "github.com.trazyn.wewechat"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "ðŸ’¬ Unofficial WeChat client built with React, MobX and Electron."
distro_pkg:
  archlinux:
homepage:
  - "https://github.com/trazyn/weweChat"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/trazyn/wewechat"
tag:
  - "chat"
  - "client"
  - "desktop"
  - "electron"
  - "mobx"
  - "react"
  - "wechat"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/trazyn/wewechat/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '"'\''[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/trazyn/wewechat" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
