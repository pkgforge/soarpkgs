#!/SBUILD
_disabled: false

pkg: "lepton"
pkg_id: "github.com.hackjutsu.Lepton"
pkg_type: "appimage"
app_id: "github.com.hackjutsu.Lepton"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "ðŸ’»     Democratizing Snippet Management (macOS/Win/Linux)"
homepage:
  - "https://github.com/hackjutsu/Lepton"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/hackjutsu/Lepton"
tag:
  - "desktop-client"
  - "electron"
  - "electron-app"
  - "electron-application"
  - "electron-builder"
  - "gists"
  - "github-gist"
  - "markdown-editor"
  - "notes"
  - "react"
  - "redux"
