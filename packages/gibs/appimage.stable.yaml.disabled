#!/SBUILD
_disabled: false

pkg: "gibs"
pkg_id: "github.com.sierdzio.gibs"
pkg_type: "appimage"
app_id: "github.com.sierdzio.gibs"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Experimental project: in-source build system. Just for fun ;-)"
homepage:
  - "https://github.com/sierdzio/gibs"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "Other"
src_url:
  - "https://github.com/sierdzio/gibs"
tag:
  - "build-automation"
  - "build-system"
  - "project-less"
  - "qt"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/sierdzio/gibs/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == true)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/sierdzio/gibs" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
