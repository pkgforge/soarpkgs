#!/SBUILD
_disabled: false

pkg: "poe-ladder"
pkg_id: "github.com.darteil.POELadder"
pkg_type: "appimage"
app_id: "github.com.darteil.POELadder"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Path of Exile ladder viewer"
homepage:
  - "https://github.com/darteil/POELadder"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/darteil/POELadder"
tag:
  - "electron"
  - "frontend"
  - "javascript"
  - "pathofexile"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/darteil/POELadder/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/darteil/POELadder" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
