#!/SBUILD
_disabled: false

pkg: "my-budget"
pkg_id: "github.com.reZach.my-budget"
pkg_type: "appimage"
app_id: "github.com.reZach.my-budget"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Free, open source offline cross-platform budgeting solution built with Electron."
distro_pkg:
  archlinux:
homepage:
  - "https://rezach.github.io/my-budget"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "GNU Affero General Public License v3.0"
src_url:
  - "https://github.com/reZach/my-budget"
tag:
  - "budgeting"
  - "free"
  - "software"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/reZach/my-budget/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == true)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/reZach/my-budget" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
