#!/SBUILD
_disabled: false

pkg: "eternalmodmanager"
pkg_id: "github.com.PowerBall253.EternalModManager-Avalonia"
pkg_type: "appimage"
app_id: "github.com.PowerBall253.EternalModManager-Avalonia"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "A cross platform mod manager for DOOM Eternal."
distro_pkg:
  archlinux:
    aur:
      - "eternalmodmanager"
homepage:
  - "https://github.com/brunoanc/EternalModManager"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT"
src_url:
  - "https://github.com/PowerBall253/EternalModManager-Avalonia"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/PowerBall253/EternalModManager-Avalonia/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '"'\''[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/PowerBall253/EternalModManager-Avalonia" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
