#!/SBUILD
_disabled: false

pkg: "yandex-browser"
pkg_id: "github.com.ivan-hc.Yandex-Browser-appimage"
pkg_type: "appimage"
app_id: "github.com.ivan-hc.Yandex-Browser-appimage"
build_util:
  - "curl#bin"
  - "jq#bin"
category:
  - "Utility"
description: "Unofficial Yandex Browsers AppImage built from the official .deb packages."
distro_pkg:
  archlinux:
    aur:
      - "yandex-browser"
  nixpkgs:
    - "yandex-browser"
homepage:
  - "http://browser.yandex.ru"
  - "https://browser.yandex.com"
  - "https://browser.yandex.ru"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "Multiple, see http://browser.yandex.ru/"
  - "Unfree"
  - "Yandex-EULA"
  - "custom:yandex-browser"
src_url:
  - "https://github.com/ivan-hc/Yandex-Browser-appimage"
tag:
  - "Networking/WWW"
  - "Tools"
  - "www-client"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/ivan-hc/Yandex-Browser-appimage/releases/latest?per_page=100" | jq -r '.. | objects | .browser_download_url? // empty' | sed -E 's/(x86_64|aarch64)//' | tr -d '[:alpha:]' | sed 's/^[^0-9]*//; s/[^0-9]*$//' | sort --version-sort | tail -n 1 | tr -d '[:space:]'
  run: |
    #Tag
    RELEASE_TAG="$(cat ./${PKG}.version)"
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/ivan-hc/Yandex-Browser-appimage@${RELEASE_TAG}" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
