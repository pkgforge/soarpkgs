#!/SBUILD
_disabled: false

pkg: "tablo-tools"
pkg_id: "github.com.jessedp.tablo-tools-electron"
pkg_type: "appimage"
app_id: "github.com.jessedp.tablo-tools-electron"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "A desktop app to help manage your Tablo devices"
homepage:
  - "https://github.com/jessedp/tablo-tools-electron"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/jessedp/tablo-tools-electron"
tag:
  - "dvr"
  - "electron"
  - "nodejs"
  - "tablo"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/jessedp/tablo-tools-electron/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        soar dl "https://github.com/jessedp/tablo-tools-electron" --match "appimage" --exclude "x86,x64,arm,zsync" -o "./${PKG}" --yes
        ;;
      x86_64)
        soar dl "https://github.com/jessedp/tablo-tools-electron" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
