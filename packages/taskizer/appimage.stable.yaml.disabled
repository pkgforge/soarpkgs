#!/SBUILD
_disabled: false

pkg: "taskizer"
pkg_id: "github.com.SimonBrandner.TaskizerDesktop"
pkg_type: "appimage"
app_id: "github.com.SimonBrandner.TaskizerDesktop"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "A task management app"
homepage:
  - "https://github.com/SimonBrandner/TaskizerDesktop"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "GNU General Public License v2.0"
src_url:
  - "https://github.com/SimonBrandner/TaskizerDesktop"
tag:
  - "angular"
  - "electron"
  - "task-manager"
  - "to-do-app"
  - "to-do-list"
  - "todo"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/SimonBrandner/TaskizerDesktop/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/SimonBrandner/TaskizerDesktop" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
