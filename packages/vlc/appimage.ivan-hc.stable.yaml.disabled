#!/SBUILD ver @v1.0.0
#SELF: https://raw.githubusercontent.com/pkgforge/soarpkgs/refs/heads/main/packages/vlc/appimage.ivan-hc.stable.yaml
_disabled: false

pkg: "vlc"
pkg_id: "github.com.ivan-hc.VLC-appimage.stable"
pkg_type: "appimage"
app_id: "org.videolan.VLC"
build_util:
  - "curl#bin"
  - "squishy-cli#bin"
category:
  - "Music"
  - "Player"
  - "TV"
description: "Cross-platform media player and streaming server"
distro_pkg:
  alpine:
    - "vlc"
  archlinux:
    aur:
      - "vlc-git"
      - "vlc-nox"
    extra:
      - "vlc"
  debian:
    - "vlc"
  nixpkgs:
    - "vlc"
homepage:
  - "https://www.videolan.org"
  - "https://github.com/videolan/vlc/"
  - "https://code.videolan.org/videolan/vlc"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
note:
  - "Community Created AppImage. Check/Report @ https://github.com/ivan-hc/VLC-appimage"
repology:
  - "vlc"
src_url:
  - "https://github.com/ivan-hc/VLC-appimage"
tag:
  - "Applications/Multimedia"
  - "Applications/Sound"
  - "Productivity/Multimedia/Video/Players"
  - "Video"
  - "Video/Players"
  - "audio"
  - "media"
  - "media-video"
  - "multimedia"
  - "multimedia.video"
  - "video"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://gitlab.archlinux.org/archlinux/packaging/packages/vlc/-/raw/main/PKGBUILD" | sed -n 's/^_vlcver=//p' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/ivan-hc/VLC-appimage" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac