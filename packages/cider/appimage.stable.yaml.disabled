#!/SBUILD
_disabled: false

pkg: "cider"
pkg_id: "github.com.ciderapp.cider-releases"
pkg_type: "appimage"
app_id: "github.com.ciderapp.cider-releases"
build_util:
  - "curl#bin"
  - "jq#bin"
category:
  - "Utility"
description: "Automated Cider Release System, compiled and generated by Circle-CI"
homepage:
  - "https://github.com/ciderapp/cider-releases"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
src_url:
  - "https://github.com/ciderapp/cider-releases"
tag:
  - "cider"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/ciderapp/cider-releases/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/ciderapp/cider-releases" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
