#!/SBUILD
_disabled: false

pkg: "devdocs-desktop"
pkg_id: "github.com.egoist.devdocs-desktop"
pkg_type: "appimage"
app_id: "github.com.egoist.devdocs-desktop"
build_util:
  - "curl#bin"
  - "jq#bin"
category:
  - "Utility"
description: "ðŸ—‚ A full-featured desktop app for DevDocs.io."
homepage:
  - "https://github.com/egoist/devdocs-desktop"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "MIT License"
src_url:
  - "https://github.com/egoist/devdocs-desktop"
tag:
  - "desktop-app"
  - "devdocs"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/egoist/devdocs-desktop/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/egoist/devdocs-desktop" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
