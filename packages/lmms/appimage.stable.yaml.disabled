#!/SBUILD
_disabled: false

pkg: "lmms"
pkg_id: "github.com.LMMS.lmms"
pkg_type: "appimage"
app_id: "github.com.LMMS.lmms"
#build_util:
#  - "curl#bin"
#  - "jq#bin"
category:
  - "Utility"
description: "Cross-platform music production software"
distro_pkg:
  alpine:
    - "lmms"
  archlinux:
    aur:
      - "lmms-git"
    extra:
      - "lmms"
  debian:
    - "lmms"
  nixpkgs:
    - "lmms"
homepage:
  - "http://lmms.io"
  - "http://lmms.sf.net"
  - "http://lmms.sourceforge.net"
  - "https://github.com/LMMS/lmms"
  - "https://lmms.io"
  - "https://sourceforge.net/projects/lmms"
maintainer:
  - "Azathothas (https://github.com/Azathothas)"
license:
  - "GNU GPLv3"
  - "GNU General Public License, version 2.0"
  - "GPL"
  - "GPL v2"
  - "GPL-2"
  - "GPL-2+"
  - "GPL-2.0+"
  - "GPL-2.0-only"
  - "GPL-2.0-or-later"
  - "GPL2"
  - "GPLv2"
  - "GPLv2+"
  - "GPLv2+ and GPLv2 and  and Copyright only"
  - "LGPL-2"
src_url:
  - "https://github.com/LMMS/lmms"
tag:
  - "Applications/Multimedia"
  - "Graphical"
  - "Music"
  - "Productivity/Multimedia/Sound/Midi"
  - "Sound"
  - "Sound/Mixers"
  - "audio"
  - "debug"
  - "media-sound"
  - "multimedia"
  - "multimedia.audio"
  - "music"
  - "programming.devel"
  - "sound"
  - "universe/sound"
x_exec:
  shell: "bash"
  pkgver: |
    curl -qfsSL "https://api.gh.pkgforge.dev/repos/LMMS/lmms/releases?per_page=100" | jq -r '[.[] | select(.draft == false and .prerelease == false)] | .[0].tag_name | gsub("\\s+"; "")' | tr -d '[:space:]'
  run: |
    #Download
    case "$(uname -m)" in
      aarch64)
        echo -e "\n[âœ—] aarch64 is Not Yet Supported\n"
       exit 1
        ;;
      x86_64)
        soar dl "https://github.com/LMMS/lmms" --match "appimage" --exclude "aarch64,arm,zsync" -o "./${PKG}" --yes
        ;;
    esac
